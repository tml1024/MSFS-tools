<Root>
  <!-- Loop with an increment larger than one to verify that the loop
       ends even if the limit is not reached exactly.
  -->
  Hello.
  <Loop>
    <Setup>
      <Param>FOO</Param>
      <From>12</From>
      <Inc>2</Inc>
      <To>15</To>
    </Setup>
    <Do>
      <Foo>#FOO#</Foo>
    </Do>
  </Loop>
  <!-- Loop downwards -->
  <Loop>
    <Setup>
      <Param>BAR</Param>
      <From>4</From>
      <Inc>-3</Inc>
      <To>-4</To>
    </Setup>
    <Do>
      <Bar>#BAR#</Bar>
    </Do>
  </Loop>
  <Loop>
    <Setup>
      <Param>I</Param>
      <From>1</From>
      <Inc>1</Inc>
      <While>
	<Lower>
	  <Value>I</Value>
	  <Number>5</Number>
	</Lower>
      </While>
    </Setup>
    <Do>
      <I>#I#</I>
    </Do>
  </Loop>
  #FOO# <!-- Should not have any value -->
  #BAR#
  Bye.
</Root>
